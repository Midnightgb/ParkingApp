<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.seller.DetailParking"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:backgroundTint="@color/white"
            android:drawableBottom="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Detalle del parqueadero"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.9"
            />



    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:background="@color/blue"
        />

    <TextView
        android:id="@+id/NameParking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del parqueo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/AddresParking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion del parqueo"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"

        />


        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6-am -10pm"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:background="@drawable/card_border"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moto"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/PriceMoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 00000"
                android:textSize="30sp"
                android:background="@color/light_blue"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carro"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/PriceCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 00000"
                android:textSize="30sp"
                android:background="@color/light_blue"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camioneta"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/PriceVan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 00000"
                android:textSize="30sp"
                android:background="@color/light_blue"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camion"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/PriceTruck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 00000"
                android:textSize="30sp"
                android:background="@color/light_blue"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>
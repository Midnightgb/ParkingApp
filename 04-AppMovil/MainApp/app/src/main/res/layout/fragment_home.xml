<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingVertical="@dimen/body"
    android:paddingHorizontal="@dimen/body"
    tools:context=".ui.home.HomeFragment">

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/subtitle" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:format24Hour="HH:mm:ss"
        android:format12Hour="hh:mm:ss a"
        android:gravity="center"
        android:textSize="@dimen/title"
        android:textColor="@color/black"
        android:fontFamily="@font/baloo2_bold"
        android:paddingVertical="@dimen/body"
        android:paddingHorizontal="@dimen/body"
        android:background="@drawable/status_default"
        android:backgroundTint="@color/white_50"
        android:layout_marginHorizontal="@dimen/body"
        android:layout_marginBottom="@dimen/subtitle"
        android:elevation="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/TextDefault"
            android:text="@string/bienvenido"
            android:textSize="@dimen/subtitle"/>
        <TextView
            android:id="@+id/tvUsername"
            android:text="username"
            style="@style/TextBold"
            android:textSize="@dimen/subtitle"
            android:paddingStart="7dp"
            android:paddingEnd="5dp" />
    </LinearLayout>


</LinearLayout>
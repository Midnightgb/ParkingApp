<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/fragmentContainerView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primera seccion"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btnSection1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ir a segunda seccion"
            android:onClick="switchSection"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragmentContainerView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Segunda seccion"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btnSection2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ir a primera seccion"
            android:onClick="switchSection"
            />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.parking.DetailParking"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/detail_parking"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <Button
                android:layout_width="10dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:backgroundTint="@color/white"
                android:drawableBottom="@drawable/icon_back"
                android:layout_marginRight="15dp"/>


            <TextView
                android:text="Detalle del parqueadero"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.9"
                style="@style/TextSubtitle"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:background="@color/primary"
            />

        <TextView
            android:id="@+id/NameParking"
            android:text="Nombre del parqueadero"
            android:layout_margin="5dp"
            style="@style/TextSubtitle"
            android:layout_width="match_parent"
            />

        <TextView
            android:id="@+id/AddresParking"
            android:layout_width="match_parent"
            android:text="Direccion del parqueadero"
            android:textSize="20sp"
            android:fontFamily="@font/baloo2_regular"
            style="@style/TextDefault"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/_6_am_10pm"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:background="@drawable/card_border"
            style="@style/TextBold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">
                <TextView
                    android:text="@string/moto"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    style="@style/TextBold"/>

                <TextView
                    android:id="@+id/PriceMoto"
                    android:text="$ 00000"
                    android:background="@drawable/border_radius_bg_blue"
                    android:layout_gravity="center"
                    android:fontFamily="@font/baloo2_regular"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    style="@style/TextTitle" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carro"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/PriceCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 00000"
                    android:textSize="30sp"
                    android:background="@drawable/border_radius_bg_blue"
                    android:layout_gravity="center"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camioneta"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/PriceVan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 00000"
                    android:textSize="30sp"
                    android:background="@drawable/border_radius_bg_blue"
                    android:layout_gravity="center"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camion"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/PriceTruck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 00000"
                    android:textSize="30sp"
                    android:background="@drawable/border_radius_bg_blue"
                    android:layout_gravity="center"
                    android:textColor="@color/primary"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    />

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
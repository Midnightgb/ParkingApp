<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.authentication.LoginActivity"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="48dp">


    <ImageView
        android:layout_width="94dp"
        android:layout_height="87dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_parking" />

    <EditText
        android:id="@+id/etNombreP"
        style="@style/FormEditText"
        android:layout_marginBottom="24dp"
        android:autofillHints="name"
        android:background="@drawable/status_default"
        android:drawableStart="@drawable/ic_car"
        android:drawableTint="@color/gray"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/baloo2_regular"
        android:hint="@string/nameParking"
        android:inputType="text" />

    <!-- Cuando este lleno con un dato y se pase a otro label, activar este color
     android:drawableTint="@color/black"

     Cuando este focus el label, activar este estilo y color al icono
     android:background="@drawable/status_acti"
     android:drawableTint="@color/primary"
     -->

    <EditText
        android:id="@+id/etaddressP"
        style="@style/FormEditText"
        android:layout_marginBottom="24dp"
        android:autofillHints="password"
        android:background="@drawable/status_default"
        android:drawableStart="@drawable/ic_location"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/baloo2_regular"
        android:hint="@string/addressParking"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/priceParking"
        android:fontFamily="@font/baloo2_bold"
        android:textColor="@color/black"
        android:textSize="@dimen/titlePrice"/>

    <EditText
        android:id="@+id/etPriceCamioneta"
        style="@style/FormEditText"
        android:layout_marginBottom="24dp"
        android:autofillHints="password"
        android:background="@drawable/status_default"
        android:drawableStart="@drawable/ic_money"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/baloo2_regular"
        android:hint="@string/priceCamioneta"
        android:inputType="number" />
    <EditText
        android:id="@+id/etPriceCamion"
        style="@style/FormEditText"
        android:layout_marginBottom="24dp"
        android:autofillHints="password"
        android:background="@drawable/status_default"
        android:drawableStart="@drawable/ic_money"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/baloo2_regular"
        android:hint="@string/priceCamion"
        android:inputType="number" />
    <EditText
        android:id="@+id/etPriceCarro"
        style="@style/FormEditText"
        android:layout_marginBottom="24dp"
        android:autofillHints="password"
        android:background="@drawable/status_default"
        android:drawableStart="@drawable/ic_money"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/baloo2_regular"
        android:hint="@string/priceCarro"
        android:inputType="number" />
    <EditText
        android:id="@+id/etPriceMoto"
        style="@style/FormEditText"
        android:layout_marginBottom="24dp"
        android:autofillHints="password"
        android:background="@drawable/status_default"
        android:drawableStart="@drawable/ic_money"
        android:drawableTint="@color/gray"
        android:fontFamily="@font/baloo2_regular"
        android:hint="@string/priceMoto"
        android:inputType="number" />


</LinearLayout>
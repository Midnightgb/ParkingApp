<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="7dp"
    android:layout_marginBottom="30dp"
    app:cardElevation="5dp"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="@color/light_blue"
                android:layout_gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="50dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/primary"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_user"
                        app:tint="@color/black"
                        android:layout_gravity="center"
                        android:clickable="true"/>
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/listNameUser"
                    style="@style/TextBold"
                    android:text="XXXXXXXXXXXX"
                    android:textSize="@dimen/subtitle"
                    android:layout_gravity="start"/>

                <TextView
                    android:id="@+id/id_user"
                    android:text="XXXXXXXXXXXX"
                    style="@style/TextDefault"
                    android:textSize="@dimen/body"
                    android:textColor="@color/gray"
                    android:layout_gravity="start"/>
            </LinearLayout>


        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAssignParking"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="70dp"
            android:backgroundTint="@color/light_blue"
            app:tint="@color/black"
            app:fabCustomSize="30dp"
            app:srcCompat="@drawable/ic_parkin_loc"
            app:elevation="3dp"
            android:layout_gravity="bottom|end" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnEditUser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="35dp"
            android:backgroundTint="@color/light_blue"
            app:tint="@color/black"
            app:fabCustomSize="30dp"
            app:srcCompat="@drawable/ic_user_edit"
            app:elevation="3dp"
            android:layout_gravity="bottom|end"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnDetailUser"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="3dp"
            android:backgroundTint="@color/light_blue"
            app:tint="@color/black"
            app:fabCustomSize="30dp"
            app:srcCompat="@drawable/eye_svgrepo_com"
            app:elevation="3dp"
            android:layout_gravity="bottom|end" />
    </FrameLayout>




</androidx.cardview.widget.CardView>